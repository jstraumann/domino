<!doctype html>
<html class="no-js" lang="">
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <title>Domino</title>
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="stylesheets/main.css">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/kioskboard@1.4.0/dist/kioskboard-1.4.0.min.css" />
  </head>
  <body data-page="collections">
    <div class="menu">
      <% if params[:id].blank? %>
        <div class="item offers"><a href="/">&larr; zurück zum Domino</a></div>
      <% else %>
        <div class="item offers"><a href="/collections">&larr; zurück zur Übersicht</a></div>
      <% end %>
    </div>
    <% if !params[:id] %>
      <div class="collections">
        <% Collection.order(created_at: :desc).each do |c| %>
          <div class="collection" data-id="<%= c.id %>">
            <h3><%= c.title %></h3>
            (<%= c.username %>, <%= c.created_at.strftime('%d.%m.%Y') %>)
            <p><em><%= c.images.count %> Bilder</em></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <% c = Collection.find(params[:id]) %>
      <div class="selection">
        <div class="info">
          <h3><%= c.title %></h3>
          (<%= c.username %>, <%= c.created_at.strftime('%d.%m.%Y') %>)
        </div>
        <div class="images">
          <% c.images.each do |image| %>
            <div class="img-container <%= image['Grösse'] %> <%= image['Ausrichtung'] %> data-info="<%= image.to_json %>"
              style="-moz-user-select: none; -webkit-user-select: none; -ms-user-select:none; user-select:none;-o-user-select:none;"
              unselectable="on" onselectstart="return false;" onmousedown="return false;">
                <img src="http://imgproxy.juergstraumann.ch/insecure/s:400:300/plain/https://archiv.juergstraumann.ch/<%= image['path'] %>@jpg" draggable="false">
                <div class="overlay">
                  <div>
                    <span class="title"><%= image['Titel'] %></span>
                    <br>
                    <%= image['Jahr'] %>
                  </div>
                  <div class="remove-preview"></div>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </body>
</html>

<script>
const collections = document.querySelectorAll('.collection');
for(const collection of collections) {
  collection.addEventListener('click', function() {
    window.location.href = '/collections?id=' + this.getAttribute('data-id');
  });
}
</script>
